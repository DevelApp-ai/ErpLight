{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "ERP.Host.Services.PluginManager": "Debug"
    }
  },
  "AllowedHosts": "*",
  "PluginSettings": {
    "LoadingMode": "RuntimePluggableClassFactory",
    "DiscoveryPaths": [
      "plugins",
      "../plugins"
    ],
    "FallbackToManualLoading": true,
    "EnablePluginErrorRecovery": true,
    "SupportedPluginVersions": ["1.0.0", "1.1.0"],
    "RequiredInterfaces": ["ERP.SharedKernel.Contracts.IPluginModule"],
    "RuntimePluggableClassFactory": {
      "RefreshIntervalSeconds": 0,
      "MaxRetryAttempts": 3,
      "EnableEventLogging": true,
      "PluginValidation": {
        "ValidateSignatures": false,
        "RequireDescription": true,
        "MinimumVersionRequired": "1.0.0"
      }
    }
  }
}
